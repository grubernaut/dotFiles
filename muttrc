folder-hook 'personal' 'source ~/path/to/personal.mail'
folder-hook 'work' 'source ~/path/to/work.mail'
folder-hook 'spam' 'source ~/path/to/spamm.mail'

source ~/path/to/work.mail   #Default to work on startup
#======================================================#
# Boring details

set ispell="aspell -e -c"

##KEYbiNDS
bind index "^" imap-fetch-mail
macro index M "T.*\n;WN" "Mark all messages as read"
macro index <F2> '<sync-mailbox><enter-command>source ~/path/to/work.mail<enter><change-folder>!<enter>'
macro index <F3> '<sync-mailbox><enter-command>source ~/path/to/personal.mail<enter><change-folder>!<enter>'
macro index <F4> '<sync-mailbox><enter-command>source ~/path/to/spamm.mail<enter><change-folder>!<enter>'
macro pager cb "|urlview<enter>" "call urlview to open links"

set beep_new

set sort = 'threads'
set sort_aux = 'reverse-last-date-received'
set sort_browser= 'reverse-date'

ignore *
unignore Date: From: User-Agent: X-Mailer X-Operating-System To: \
         Cc: Reply-To: Subject: Mail-Followup-To:
hdr_order Date: From: User-Agent: X-Mailer X-Operating-System To: \
        Cc: Reply-To: Subject: Mail-Followup-To:
                       
set editor="vim -c 'set tw=70 et' '+/^$' " 
set edit_headers=yes      # See the headers when editing

source ~/.mutt/mutt_colors_256            # In their own file 


lists mutt-users
subscribe mutt-users
set followup_to=yes        # Sets 'Mail-Followup-To' header
set honor_followup_to=yes  
fcc-hook mutt-user +mutt   # See your own posts using fcc

#======================================================#
# Odds and ends

set sig_on_top=yes
auto_view text/html
set mail_check = 60 
set timeout = 15
#set markers          # mark wrapped lines of text in the pager with a +
set smart_wrap       # Don't wrap mid-word
set pager_context=5  # Retain 5 lines of previous page when scrolling.
set status_on_top    # Status bar on top.
push <show-version>  # Shows mutt version at startup


macro pager A |`~/.mutt/mailmutt.py ~/.mutt-aliases`\n

